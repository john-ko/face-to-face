        <!--android:text="@string/one"-->
        <!--android:textSize="40dp"-->
        <!--android:textStyle="bold"-->
        <!--android:layout_centerInParent="true"/>-->

        <com.github.mikephil.charting.charts.PieChart
            android:layout_width="match_parent" android:id="@+id/pieChart_1"
            android:layout_height="210dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp">
        </com.github.mikephil.charting.charts.PieChart>

        <com.github.mikephil.charting.charts.LineChart
            android:layout_width="match_parent" android:id="@+id/lineChart_3"
            android:layout_height="210dp"
            android:layout_marginTop="38dp"
            android:layout_below="@+id/pieChart_1"
            android:layout_alignParentStart="true">
        </com.github.mikephil.charting.charts.LineChart>

        <com.github.mikephil.charting.charts.CandleStickChart
            android:layout_width="match_parent" android:id="@+id/candleCart"
            android:layout_height="350dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/lineChart_3"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="60dp">
        </com.github.mikephil.charting.charts.CandleStickChart>

    </RelativeLayout>
</ScrollView>

